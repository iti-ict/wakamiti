<Configuration status="WARN">
    <Properties>
        <Property name="log4j.skipJansi">false</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="[%t] [%level] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="iti.wakamiti.logs" level="info"/>
        <Logger name="iti.wakamiti.test" level="trace"/>
        <Logger name="iti.wakamiti.core.backend.ExpressionMatcher" level="info"/>
        <Logger name="iti.wakamiti.core.backend.DefaultBackendFactory" level="info"/>
    </Loggers>
</Configuration>