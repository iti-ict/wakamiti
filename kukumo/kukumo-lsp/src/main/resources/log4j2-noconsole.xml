<Configuration status="WARN">
	<Properties>
		<Property name="log4j.skipJansi">false</Property>
	</Properties>
	<Appenders>
		<RollingFile name="rollingFile" fileName="kukumo-lsp.log"
			filePattern="kukumo-lsp.%d{dd-MMM}.log" ignoreExceptions="false">
			<PatternLayout>
				<Pattern>[%d{HH:mm:ss}] >> %m%n"</Pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy max="5" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="rollingFile" />
		</Root>
	</Loggers>
</Configuration>